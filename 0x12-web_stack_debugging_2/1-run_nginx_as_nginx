#!/usr/bin/env bash
# This script create a user called nginx and running as nginx user
# nginx must be listening on all active IPs on port 8080
useradd nginx
sed -i 's/user www-data;/# user www-data;\nuser nginx;/g' /etc/nginx/nginx.conf
sed -i "s/listen 80 default_server;/listen *:8080;/" /etc/nginx/sites-available/default
pkill apache2
sudo /etc/init.d/nginx restart
